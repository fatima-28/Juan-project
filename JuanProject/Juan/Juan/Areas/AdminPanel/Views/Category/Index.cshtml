@using Juan.Models

@model IEnumerable<Category>;
@{
    ViewData["Title"] = "Index";
    int count = 1;
}

<div class="col-lg-12 stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Categories</h4>
           <a class="btn btn-success" asp-action="Create">Create new category</a>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                              Category name
                            </th>
                            <th>
                               Settings
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var ct in Model)
                        {
                            <tr class="table-info">
                                <td>
                                    @count
                                </td>
                                <td>
                                   @ct.Name
                                </td>
                                <td>
                                    <a class="btn btn-danger btn-lg" asp-action="Delete" asp-route-id="@ct.Id">
                                        <i class="fa-solid fa-trash-can" style=" color:white;"></i>
                                    </a>
                                    <a class="btn btn-warning btn-lg" asp-action="Update" asp-route-id="@ct.Id">
                                        <i class="fa-solid fa-pen" style="color:white;"></i>
                                    </a>


                                </td>

                            </tr>
                            count++;

                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
