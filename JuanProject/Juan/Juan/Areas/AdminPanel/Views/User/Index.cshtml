@using Juan.ViewModels.Account
@using Juan.Models
@model List<AppUser>
@{
    ViewData["Title"] = "Index";
    int count = 1;
}

<div class="col-lg-12 stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Users</h4>
            <a class="btn btn-success" asp-action="Create">Create new user</a>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                USERNAME
                            </th>
                            <th>
                                EMAIL
                            </th>
                           
                            <th>
                                ACTIVATED
                            </th>
                            <th>
                                ROLE
                            </th>
                            <th>
                               SETTINGS
                            </th>

                        </tr>
                    </thead>
                    <tbody>


                        @foreach (var user in Model)
                        {
                        <tr class="table-info">
                            <td>
                                @count
                            </td>
                            <td>
                                @user.UserName
                            </td>
                            <td>
                                @user.Email
                            </td>


                            @if (@user.IsActivated)
                            {
                                <td>
                                    Active
                                </td>
                            }
                            else
                            {
                                <td>
                                    Not Active
                                </td>
                            }

                            <td>
                                Role
                            </td>
                            <td>
                                <a class="btn btn-danger btn-lg" asp-action="Delete" asp-route-id="@user.Id">
                                    <i class="fa-solid fa-trash-can" style=" color:white;"></i>
                                </a>
                                <a class="btn btn-warning btn-lg" asp-action="Update" asp-route-id="@user.Id">
                                    <i class="fa-solid fa-pen" style="color:white;"></i>
                                </a>


                            </td>

                        </tr>
                            count++;

                        }




                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


